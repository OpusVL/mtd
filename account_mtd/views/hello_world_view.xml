<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mtd_hello_world_view" model="ir.ui.view">
        <field name="name">Hello World form</field>
        <field name="model">mtd.hello_world</field>
        <field name="arch" type="xml">
            <form string="Hello World">
                <sheet>
                    <group>
                        <field name="name" string="Endpoint" readonly="1"/>
                        <field name="api_name" invisible="1"/>
                        <field name="hmrc_credential"/>
                        <field name="scope" invisible="1"/>
                        <field name="which_button_type_clicked" invisible="1"/>
                        <field name="path" invisible="1"/>
                        <field name="current_record" invisible="1"/>
                    </group>
                    <group>
                        <button name="action_hello_world_connection"
                                type="object"
                                string="Connect to HMRC"
                                class="oe_highlight"/>
                    </group>
                    <group>
                        <field name="response_from_hmrc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>