<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mtd_hellow_world_view" model="ir.ui.view">
        <field name="name">Hello World form</field>
        <field name="model">mtd.hello_world</field>
        <field name="arch" type="xml">
            <form string="Hello World">
                <sheet>
                    <header>
                <button name="action_hello_world_connect" 
                    type="object"
                    string="Hello World"
                    class="oe_highlight"/>
                <button name="action_hello_application_connection" 
                    type="object"
                    string="Hello Application"
                    class="oe_highlight"/>
                <button name="action_hello_user_connection" 
                    type="object"
                    string="Hello User"
                    class="oe_highlight"/>
            </header>
                    <group>
                        <field name="name" string="Eddpoint Name"/>
                        <field name="api_name"/>
                        <field name="hmrc_credential"/>
                        <field name="scope" invisible="1"/>
                        <field name="which_button_type_clicked" invisible="1"/>
                        <field name="path" invisible="1"/>
                    </group>
                    <group>
                        <field name="response_from_hmrc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>