<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mtd_hmrc_configuration_view" model="ir.ui.view">
        <field name="name">HMRC Configuration form</field>
        <field name="model">mtd.hmrc_configuration</field>
        <field name="arch" type="xml">
            <form string="HMRC Configuration">
                <header>
                </header>
                <sheet>
                    <group>
			            <field name="environment" widget="radio" />
                        <field name="redonly_on_live" invisible="1"/>
                        <field name="name" attrs="{'readonly':[('redonly_on_live', '=', True)]}"/>
                        <field name="server_token" attrs="{'readonly':[('redonly_on_live', '=', True)]}"/>
                        <field name="client_id" attrs="{'readonly':[('redonly_on_live', '=', True)]}"/>
                        <field name="client_secret" attrs="{'readonly':[('redonly_on_live', '=', True)]}"/>
                        <field name="hmrc_url" attrs="{'readonly':[('redonly_on_live', '=', True)]}"/>
                        <field name="redirect_url"/>
                        <field name="access_token" invisible="1"/>
                        <field name="refresh_token" invisible="1"/>
                        <field name="state" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
