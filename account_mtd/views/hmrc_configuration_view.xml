<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mtd_hmrc_configuration_view" model="ir.ui.view">
        <field name="name">HMRC Configuration form</field>
        <field name="model">mtd.hmrc_configuration</field>
        <field name="arch" type="xml">
            <form string="HMRC Configuration">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="server_token"/>
                        <field name="client_id"/>
                        <field name="client_secret"/>
                        <field name="environment" widget="radio" options="{'horizontal': true}"/>
                        <field name="hmrc_url"/>
                        <field name="redirect_url"/>
                        <field name="access_token" invisible="1"/>
                        <field name="refresh_token" invisible="1"/>
                        <field name="state" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
